{
  "name": "fitgoal-ai",
  "version": "1.0.0",
  "description": "AI-Powered Fitness and Nutrition Tracker with Spoonacular Integration",
  "main": "server/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "node server/index.js",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "server:dev": "nodemon server/index.js",
    "server:start": "node server/index.js",
    "build": "npm run client:build",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "seed": "node server/utils/seedDatabase.js",
    "install-client": "cd client && npm install",
    "postinstall": "npm run install-client",
    "clean": "rm -rf node_modules client/node_modules",
    "logs": "tail -f server/logs/combined.log",
    "health": "curl http://localhost:5000/api/health"
  },
  "keywords": [
    "fitness",
    "nutrition",
    "ai",
    "health",
    "tracking",
    "spoonacular",
    "react",
    "express",
    "mongodb"
  ],
  "author": "FitGoal AI Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "validator": "^13.11.0",
    "sanitize-html": "^2.11.0",
    "simple-statistics": "^7.8.3",
    "mathjs": "^11.11.0",
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "cross-env": "^7.0.3"
  },
  "proxy": "http://localhost:5000",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/server/**/__tests__/**/*.js",
      "**/server/**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!server/index.js"
    ]
  },
  "nodemonConfig": {
    "watch": ["server"],
    "ignore": [
      "node_modules/*",
      "client/*",
      "server/logs/*",
      "*.test.js"
    ],
    "delay": "1000"
  }
}